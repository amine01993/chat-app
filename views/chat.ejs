<% layout('layout') -%>

<% block('title', 'Chat') %>

<% stylesheet('css/chat.css') %>
<% script('js/chat.js') %>

<% block('scriptsLib', '<script src="/socket.io/socket.io.js"></script>') %>

<input type="hidden" value="<%= user.id %>" id="connected-user">

<div class="container">
  <div class="row equal-height-grid">

    <div class="col l9 s12">

      <div class="card" id="chat-card">
        <div class="card-content">
          <span class="card-title">Jane Doe</span>
          <!-- <p class="">Currently Online</p> -->
        </div>

        <div class="divider"></div>

        <div class="card-content chat-content">
          <div class="chat-wrapper">
          </div>
        </div>

        <div class="chat-input">
          <form action="" id="message-form">
            <div class="chat-input-bar">
              <textarea id="message-input" class="materialize-textarea" style="height: 72px;"></textarea>
              <button type="submit">
                <i class="material-icons">send</i>
              </button>
            </div>
          </form>
        </div>
      </div>

    </div>

    <div class="col l3 s12">

      <div class="card">
        <div class="card-content">
          <span class="card-title">Friends</span>
          <!-- <p>12 Friends online</p> -->
        </div>
        <ul class="collection flush" id="channels-list">
        </ul>
      </div>

    </div>

  </div>

</div>
